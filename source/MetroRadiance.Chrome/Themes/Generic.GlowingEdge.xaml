<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:chrome="clr-namespace:MetroRadiance.Chrome">

	<PathGeometry x:Key="CornerGeometryKey"
				  Figures="M8,0 L8,8 A8,8,0,0,1,0,0 z" />

	<Style TargetType="{x:Type chrome:GlowingEdge}">
		<Setter Property="Position"
				Value="Left" />
		<Setter Property="Width"
				Value="Auto" />
		<Setter Property="Height"
				Value="Auto" />
		<Setter Property="Background"
				Value="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=Background}" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type chrome:GlowingEdge}">
					<Border />
				</ControlTemplate>
			</Setter.Value>
		</Setter>

		<Style.Triggers>
			<Trigger Property="Position"
					 Value="Left">
				<Setter Property="Width"
						Value="8" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type chrome:GlowingEdge}">
							<Rectangle Cursor="SizeWE"
									   chrome:WindowChrome.SizingMode="Left">
								<Shape.Fill>
									<LinearGradientBrush x:Name="PART_GradientBrush"
														 StartPoint="1,0"
														 EndPoint="0,0" />
								</Shape.Fill>
							</Rectangle>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Trigger>

			<Trigger Property="Position"
					 Value="Top">
				<Setter Property="Height"
						Value="8" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type chrome:GlowingEdge}">
							<Grid VerticalAlignment="Bottom"
								  Background="Transparent">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="8" />
									<ColumnDefinition />
									<ColumnDefinition Width="8" />
								</Grid.ColumnDefinitions>
								<Path Grid.Column="0"
									  Data="{StaticResource CornerGeometryKey}"
									  Width="16"
									  Height="16"
									  HorizontalAlignment="Left"
									  VerticalAlignment="Top"
									  Stretch="Fill"
									  Cursor="SizeNWSE"
									  chrome:WindowChrome.SizingMode="TopLeft">
									<Shape.Fill>
										<RadialGradientBrush x:Name="PART_GradientBrush2" />
									</Shape.Fill>
								</Path>
								<Rectangle Grid.Column="1"
										   Cursor="SizeNS"
										   chrome:WindowChrome.SizingMode="Top">
									<Shape.Fill>
										<LinearGradientBrush x:Name="PART_GradientBrush"
															 StartPoint="0,1"
															 EndPoint="0,0" />
									</Shape.Fill>
								</Rectangle>
								<Path Grid.Column="2"
									  Data="{StaticResource CornerGeometryKey}"
									  Width="16"
									  Height="16"
									  HorizontalAlignment="Right"
									  VerticalAlignment="Top"
									  Stretch="Fill"
									  Cursor="SizeNESW"
									  chrome:WindowChrome.SizingMode="TopRight">
									<Shape.Fill>
										<RadialGradientBrush x:Name="PART_GradientBrush3" />
									</Shape.Fill>
								</Path>
							</Grid>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Trigger>

			<Trigger Property="Position"
					 Value="Right">
				<Setter Property="Width"
						Value="8" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type chrome:GlowingEdge}">
							<Rectangle Cursor="SizeWE"
									   chrome:WindowChrome.SizingMode="Right">
								<Shape.Fill>
									<LinearGradientBrush x:Name="PART_GradientBrush"
														 StartPoint="0,0"
														 EndPoint="1,0" />
								</Shape.Fill>
							</Rectangle>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Trigger>

			<Trigger Property="Position"
					 Value="Bottom">
				<Setter Property="Height"
						Value="8" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type chrome:GlowingEdge}">
							<Grid VerticalAlignment="Top"
								  Background="Transparent">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="8" />
									<ColumnDefinition />
									<ColumnDefinition Width="8" />
								</Grid.ColumnDefinitions>
								<Path Grid.Column="0"
									  Data="{StaticResource CornerGeometryKey}"
									  Width="16"
									  Height="16"
									  HorizontalAlignment="Left"
									  VerticalAlignment="Bottom"
									  Stretch="Fill"
									  Cursor="SizeNESW"
									  chrome:WindowChrome.SizingMode="BottomLeft">
									<Shape.Fill>
										<RadialGradientBrush x:Name="PART_GradientBrush2" />
									</Shape.Fill>
								</Path>
								<Rectangle Grid.Column="1"
										   Cursor="SizeNS"
										   chrome:WindowChrome.SizingMode="Bottom">
									<Shape.Fill>
										<LinearGradientBrush x:Name="PART_GradientBrush"
															 StartPoint="0,0"
															 EndPoint="0,1" />
									</Shape.Fill>
								</Rectangle>
								<Path Grid.Column="2"
									  Data="{StaticResource CornerGeometryKey}"
									  Width="16"
									  Height="16"
									  HorizontalAlignment="Right"
									  VerticalAlignment="Bottom"
									  Stretch="Fill"
									  Cursor="SizeNWSE"
									  chrome:WindowChrome.SizingMode="BottomRight">
									<Shape.Fill>
										<RadialGradientBrush x:Name="PART_GradientBrush3" />
									</Shape.Fill>
								</Path>
							</Grid>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Trigger>

		</Style.Triggers>
	</Style>

</ResourceDictionary>
